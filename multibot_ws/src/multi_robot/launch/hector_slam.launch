<?xml version="1.0"?>
<launch>
	<!-- <node pkg="tf" type="static_transform_publisher" name="odom_map_broadcaster_robot1" args="0 0 0 0 0 0 robot1_tf/map robot1_tf/odom 100"/> -->
	<node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
		<!-- Frame names -->
		<param name="map_frame" value="robot1_tf/map"/>
		<param name="base_frame" value="robot1_tf/base_link"/>
		<param name="odom_frame" value="robot1_tf/base_odom"/>

		<!-- Topic names -->
		<param name="scan_topic" value="robot1/scan"/>

		<!-- Tf use -->
		<param name="use_tf_scan_transformation" value="true"/>
		<param name="use_tf_pose_start_estimate" value="false"/>
		<param name="pub_map_odom_transform" value="true"/>

		<!-- Map size / start point -->
		<param name="map_resolution" value="0.025"/>
		<param name="map_size" value="1024"/>
		<param name="map_start_x" value="0.5"/>
		<param name="map_start_y" value="0.5"/>
		<param name="map_multi_res_levels" value="4"/>

		<!-- Map update parameters -->
		<param name="update_factor_free" value="0.4"/>
		<param name="update_factor_occupied" value="0.9"/>
		<param name="map_update_distance_thresh" value="0.4"/>
		<param name="map_update_angle_thresh" value="0.06"/>
		<param name="map_pub_period" value="2.0"/>

		<!-- Advertising config -->
		<param name="advertise_map_service" value="false"/>

		<!-- <remap from="map" to="robot1_tf/map"/> -->
	</node>

	<!-- <node pkg="robot_state_publisher" type="robot_state_publisher" name="slam_state_publisher">
		<param name="publish_frequency" value="30.0"/>
	</node> -->
</launch>
